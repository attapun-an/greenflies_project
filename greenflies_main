# Logic

def main():
    menu = True
    edited = False
    options = ["Set Generation 0 values", "Display Generation 0 Values", "Run model", "Export Data", "Quit"]
    while menu:
        # prints options
        menu_display(options)
        user_input_checker = True
        while user_input_checker:
            user_input = input(">")
            try:
                user_input = int(user_input)
                if 0 < user_input < len(options) + 1:
                    user_input_checker = False
                else:
                    print("Invalid option")

            except ValueError:
                print("Please input a number")
        if user_input == 1:
            pop_lower_bound = 0
            pop_upper_bound = 100
            juvenile_pop, adult_pop, senile_pop, survival_rate, birth_rate, new_generations_modelled, edited = generation_0_setup(pop_lower_bound, pop_upper_bound)
            print("""
            Juveniles: {0}
            Adults: {1}
            Seniors: {2}

            Survival_rate: {3}
            Birth_rate: {4}
            Number of generations to model: {5}
            """.format(juvenile_pop, adult_pop, senile_pop, survival_rate, birth_rate, new_generations_modelled)
        if user_input == 5:
            menu = False


def menu_display(options):
    for i in range(len(options)):
        print('{0} {1}'.format(str(i + 1), options[i]))


def integer_checker2(user_inp, lower_bound, upper_bound, error_message):
    try:
        user_input = int(user_inp)
        if lower_bound < user_input < upper_bound:
            return user_input, False
        else:
            print(error_message)
    except ValueError:
        print(error_message)

        # set up initial generation 0 values


